@using Web_App.AppCode.Helper.Language;
@using Web_App.App_Start;
@{
    Layout = "~/Views/Shared/_LayoutProveedorFisico.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12 pt-4">
            <h1 class="brand-font pt-4">@LanguageHelper.Configuraciones</h1>
        </div>

        <hr>

        <div class="col-12 pb-3">
            <p class="lead">@LanguageHelper.ConfiguracionesDescripcion</p>
        </div>
    </div>
</div>

<div class="jumbotron mt-4">
    <div class="container">
        <div class="row">
            <div class="col-9">
                <h2 class="display-4">@LanguageHelper.Licencias</h2>
                <p class="lead">@LanguageHelper.LicenciasDescripcion</p>
            </div>

            <div class="col-3">
                <a class="btn btn-primary btn-lg mt-5" href="@Url.Action("vMembresiaFisico", "Membresia")" role="button">@LanguageHelper.IrAhora</a>
            </div>
        </div>
    </div>
</div>

<div class="jumbotron mt-4">
    <div class="container">
        <div class="row">
            <div class="col-9">
                <h2 class="display-4">@LanguageHelper.Documentos</h2>
                <p class="lead">@LanguageHelper.DocumentosDescripcion</p>
            </div>

            <div class="col-3">
                <a class="btn btn-primary btn-lg mt-5" href="@Url.Action("vDocumentoFisico", "Documento")" role="button">@LanguageHelper.IrAhora</a>
            </div>
        </div>
    </div>
</div>

