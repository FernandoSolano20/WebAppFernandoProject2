@using Web_App.AppCode.Helper.Language
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MASTER</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.11.2/css/all.css">
    <!-- Google Fonts Roboto -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!-- Material Design Bootstrap -->
    <link rel="stylesheet" href="~/Content/compiled-4.14.1.min.css">
    <!-- MDBootstrap Datatables  -->
    <link href="~/Content/addons/datatables.min.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link rel="stylesheet" href="~/Content/style.css">


    <!-- jQuery -->
    <script type="text/javascript" src="~/Scripts/jquery.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    @*<script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
        <!-- MDB core JavaScript -->
        <script type="text/javascript" src="https://z9t4u9f6.stackpathcdn.com/wp-content/themes/mdbootstrap4/js/bundles/4.14.1/compiled.0.min.js?ver=4.14.1"></script>
        <script src="https://brandflow.net/static/general/bf-core.min.js?ts=1584823562877"></script>
        <script src="https://z9t4u9f6.stackpathcdn.com/wp-content/plugins/woocommerce-multilingual/res/js/front-scripts.min.js?ver=4.7.9"></script>*@
    <script type="text/javascript" src="~/Scripts/compiled.min.js"></script>
    <script src="~/Scripts/Services/SelectAjax/selectComponent.js"></script>
    <!-- Control Actions Script -->
    <script src="~/Scripts/Views/ControlActions.js"></script>
    <!-- Data Tables Script-->
    <script src="~/Scripts/addons/datatables.min.js"></script>
    <!-- FontAwesome Script-->
    <script src="https://kit.fontawesome.com/a993a78eb6.js" crossorigin="anonymous"></script>
    <script src="~/Scripts/Services/Helper/Prototypes.js"></script>
</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark scrolling-navbar elegant-color">
        <div class="container">

            <!-- Brand -->
            <a class="navbar-brand brand-font" href="@Url.Action("Login", "Home")">
                <strong>MASTER</strong>
            </a>

            <!-- Collapse -->
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!--Left-->
            <!-- Links -->
            <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <!-- Links -->
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")">@LanguageHelper.IniciarSesion</a>
                    </li>
                    <!-- Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">@LanguageHelper.RegistreseAhora</a>
                        <div class="dropdown-menu dropdown-dark" aria-labelledby="navbarDropdownMenuLink">
                            <a class="dropdown-item" href="@Url.Action("Registrar", "Cliente")">@LanguageHelper.RegistrarCliente</a>
                            <a class="dropdown-item" href="@Url.Action("Registrar", "OferenteFisico")">@LanguageHelper.RegistrarOferenteFisico</a>
                            <a class="dropdown-item" href="@Url.Action("Registrar", "OferenteJuridico")">@LanguageHelper.RegistrarOferenteJuridico</a>
                        </div>
                    </li>

                </ul>

            </div>

        </div>
    </nav>
    <!--/.Navbar-->

    <div class="alert alert-danger alert-dismissable" style="display: none;" id="alert_container">
        <button type="button" class="close" onclick="$('.alert').hide()">×</button>
        <span id="alert_message"></span>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>



</body>
</html>
