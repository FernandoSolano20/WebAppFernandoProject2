@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;
<script src="~/Scripts/Views/Documento/vDocumento.js"></script>
<script src="~/Scripts/Views/Documento/CloudinaryUploader.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>

@{
    Layout = "~/Views/Shared/_LayoutProveedorJuridico.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12 pt-4">
            <h1 class="brand-font pt-4">@LanguageHelper.Documentos</h1>
        </div>

        <hr>

        <div class="col-12 pb-3">
            <p class="lead">@LanguageHelper.DocumentosDescripcion</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.ID + ", " + LanguageHelper.Titulo + "," + LanguageHelper.URL + "," + LanguageHelper.Estado + "," + LanguageHelper.Acciones;
}

@Html.CtrlTable(viewName: "vDocumento", id: "tblDocumento", title: LanguageHelper.Documentos,
    columnsTitle: columnsTitle, ColumnsDataName: "ID,Titulo,URL,Estado", onSelectFunction: "BindFields", colorHeader: "red", hasButton: true, buttonId: "btnCreate", buttonType: "success", buttonLabel: LanguageHelper.Crear, buttonFunction: "", buttonToggle: "modal", buttonTarget: "createModal")

@Html.CtrlModalForm(viewName: "vDocumento", id: "createModal", modalFormId: "createModalForm", title: LanguageHelper.Crear, text: LanguageHelper.IngresarTextoCrear, inputColumnDataNames: "Titulo,URL,Upload", inputIds: "txtCreateTitulo,txtCreateURL,btnCreateDocument", inputTypes: "text,text,button", inputClasses: ",disabled,center-item w-50 btn-outline-success waves-effect mt-3 p-3 rounded mb-0 ", inputPlaceholders: ",,", inputLabels: LanguageHelper.Titulo + "," + LanguageHelper.URL + ",", inputValues: ",,Subir documento", btnActionId: "btnInsert", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "CreateDocument", btnCancelId: "btnInsertCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanInsert")

@Html.CtrlModalForm(viewName: "vDocumento", id: "editModal", modalFormId: "editModalForm", title: LanguageHelper.Editar, text: LanguageHelper.IngresarTextoEditar, inputColumnDataNames: "ID,Titulo,URL,Upload", inputIds: "txtEditID,txtEditTitulo,txtEditURL,btnEditDocument", inputTypes: "hidden,text,text,button", inputClasses: ",,disabled,center-item w-50 btn-outline-success waves-effect mt-3 p-3 rounded mb-0 ", inputPlaceholders: ",,,", inputLabels: "," + LanguageHelper.Titulo + "," + LanguageHelper.URL + ",", inputValues: ",,,Subir documento", btnActionId: "btnSave", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "UpdateDocument", btnCancelId: "btnEditCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanUpdate")

@Html.CtrlModalMessage(viewName: "vDocumento", id: "deleteModal", modalFormId: "deleteModalMessage", title: LanguageHelper.Eliminar, text: LanguageHelper.ConfirmacionEliminar, btnActionId: "btnDelete", btnActionType: "danger", btnActionText: LanguageHelper.Eliminar, btnActionFunction: "Delete", btnCancelId: "btnDeleteCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanDeleteAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Titulo")

@Html.CtrlModalMessage(viewName: "vDocumento", id: "statusModal", modalFormId: "statusModalMessage", title: LanguageHelper.ActivarDesactivar, text: LanguageHelper.ConfirmacionEstado, btnActionId: "btnStatus", btnActionType: "warning", btnActionText: LanguageHelper.ActivarDesactivar, btnActionFunction: "UpdateStatus", btnCancelId: "btnStatusCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanStatusAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Titulo")
