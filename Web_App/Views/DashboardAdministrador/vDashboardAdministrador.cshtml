@using Web_App.AppCode.Helper.Language;
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

    <script src="~/Scripts/Views/Dashboards/vDashboardAdministrador.js"></script>

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">@LanguageHelper.PanelControl</h1>
        </div>

        <hr>

        <div class="col-12">
            <p class="lead">@LanguageHelper.PanelControlDescripcion</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Card -->
        <div class="col-12 pt-3">
            <!-- Card -->
            <div class="card"  id="cardIngresosDiarios">
                
                <!-- Card content -->
                <div class="card-body text-center">

                    <!-- Title -->
                    <h4 class="card-title">@LanguageHelper.IngresosDiarios</h4>
                    <!-- Text -->
                    <p class="text-success font-weight-bold"><span class="data h1 text-dark" id="spanValorIngresosDiarios" ColumnDataName="MontoTotal">0</span> USD</p>

                    <p class="card-text">@LanguageHelper.Fecha <span ColumnDataName="Fecha" class="data">@DateTime.Now</span></p>
                </div>

            </div>
            <!-- Card -->
        </div>

    </div>
</div>

<div class="container">
    <div class="row">
        <!-- Card -->
        <div class="col-12 pt-3">
            <!-- Card -->
            <div class="card" id="cardIngresosDiarios">

                <!-- Card content -->
                <div class="card-body text-center">
                    <!-- Title -->
                    <h4 class="card-title">@LanguageHelper.IngresosSeisMeses</h4>
                    <!-- Text -->
                    <p>@LanguageHelper.IngresoSeisMesesDescripcion</p>

                    <canvas id="reporteIngresosMensualesPlataforma" style="max-width:800px; margin: 0 auto;"></canvas>
                </div>

            </div>
            <!-- Card -->
        </div>

    </div>
</div>
