@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;
<script src="~/Scripts/Views/Bitacora/vBitacora.js"></script>
@{
        Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">@LanguageHelper.Bitacora</h1>
        </div>

        <hr>

        <div class="col-12">
            <p class="lead">@LanguageHelper.BitacoraDescripcion</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.ID + "," + LanguageHelper.Entidad + "," + LanguageHelper.VerboHTTP + "," + LanguageHelper.Accion + "," + LanguageHelper.Identificador + "," + LanguageHelper.IDUsuario + "," + LanguageHelper.Fecha;
}

@Html.CtrlTable(viewName: "vBitacora", id: "tblBitacora", title: LanguageHelper.Bitacora, columnsTitle: columnsTitle, ColumnsDataName: "ID,Entidad,Verbo,Accion,Identificador,ID_Usuario,Fecha", onSelectFunction: "OnSelect", colorHeader: "red")

