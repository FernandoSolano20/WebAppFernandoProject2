@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;
<script src="~/Scripts/Views/TipoTrabajo/vTipoTrabajo.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">@LanguageHelper.TiposTrabajo</h1>
        </div>

        <hr>

        <div class="col-12">
            <p class="lead">@LanguageHelper.MantenimientoTiposTrabajoDescripcion</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.ID + "," + LanguageHelper.Nombre + "," + LanguageHelper.Estado + "," + LanguageHelper.Acciones;
}

@Html.CtrlTable(viewName: "vTipoTrabajo", id: "tblTipoTrabajo", title: LanguageHelper.TiposTrabajo,
    columnsTitle: columnsTitle, ColumnsDataName: "ID,Nombre,Estado", onSelectFunction: "BindFields", colorHeader: "red", hasButton: true, buttonId: "btnCreate", buttonType: "success", buttonLabel: LanguageHelper.Crear, buttonFunction: "", buttonToggle: "modal", buttonTarget: "createModal")

@Html.CtrlModalForm(viewName: "vTipoTrabajo", id: "editModal", modalFormId: "editModalForm", title: LanguageHelper.Editar, text: LanguageHelper.IngresarTextoEditar, inputColumnDataNames: "ID,Nombre", inputIds: "txtEditID,txtEditNombre", inputTypes: "text,text", inputClasses: "disabled,", inputPlaceholders: "~,~", inputLabels: LanguageHelper.ID + "," + LanguageHelper.Nombre, inputValues: ",,", btnActionId: "btnSave", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "Update", btnCancelId: "btnEditCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanUpdate")

@Html.CtrlModalForm(viewName: "vTipoTrabajo", id: "createModal", modalFormId: "createModalForm", title: LanguageHelper.Crear, text: LanguageHelper.IngresarTextoCrear, inputColumnDataNames: "Nombre", inputIds: "txtCreateNombre", inputTypes: "text", inputClasses: ",", inputPlaceholders: ",", inputLabels: LanguageHelper.Nombre, inputValues: ",", btnActionId: "btnInsert", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "Create", btnCancelId: "btnInsertCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanInsert")

@Html.CtrlModalMessage(viewName: "vTipoTrabajo", id: "deleteModal", modalFormId: "deleteModalMessage", title: LanguageHelper.Eliminar, text: LanguageHelper.ConfirmacionEliminar, btnActionId: "btnDelete", btnActionType: "danger", btnActionText: LanguageHelper.Eliminar, btnActionFunction: "Delete", btnCancelId: "btnDeleteCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanDeleteAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Nombre")

@Html.CtrlModalMessage(viewName: "vTipoTrabajo", id: "statusModal", modalFormId: "statusModalMessage", title: LanguageHelper.ActivarDesactivar, text: LanguageHelper.ConfirmacionEstado, btnActionId: "btnStatus", btnActionType: "warning", btnActionText: LanguageHelper.ActivarDesactivar, btnActionFunction: "UpdateStatus", btnCancelId: "btnStatusCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanStatusAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Nombre")
