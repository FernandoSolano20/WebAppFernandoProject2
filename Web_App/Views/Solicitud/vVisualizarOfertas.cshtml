@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;

    <script src="~/Scripts/Views/Solicitud/vVisualizarOfertas/vVisualizarOfertas.js"></script>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12 pt-4">
            <h1 class="brand-font pt-4">@LanguageHelper.OfertasTrabajo</h1>
        </div>

        <hr>

        <div class="col-12 pb-3">
            <p class="lead">@LanguageHelper.OfertasTrabajoDescripcion</p>
        </div>
    </div>
</div>

@{
    string columnsTitle =  LanguageHelper.NombreEmpresa + "," + LanguageHelper.FechaInicioTrabajo + "," + LanguageHelper.Acciones;
}

@Html.CtrlTable(viewName: "vVisualizarOfertas", id: "tblOfertas", title: LanguageHelper.OfertasTrabajo,
    columnsTitle: columnsTitle, ColumnsDataName: "NombreComercial,FormatoFecha", onSelectFunction: "BindFields", colorHeader: "red", hasButton: false)


