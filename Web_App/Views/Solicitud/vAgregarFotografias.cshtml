@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;

@{
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}


<script src="~/Scripts/Views/Solicitud/vFinalizarSolicitud/AgregarFotografias/vAgregarFotografias.js"></script>
<script src="https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js" type="text/javascript"></script>
<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
<script src="~/Scripts/Views/Solicitud/vFinalizarSolicitud/AgregarFotografias/CloudinaryUploader.js"></script>



<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12 pt-4">
            <h1 class="brand-font pt-4">@LanguageHelper.FinalizarSolicitudTrabajo</h1>
        </div>

        <hr>

        <div class="col-12 pb-3">
            <p class="lead">@LanguageHelper.FinalizarSolicitudAgregarFotografias</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.Titulo + "," + LanguageHelper.URL + "," + LanguageHelper.Acciones;
}

@Html.CtrlTable(viewName: "vAgregarFotografias", id: "tblFotografia", title: LanguageHelper.Fotografias,
    columnsTitle: columnsTitle, ColumnsDataName: "Titulo,URL", onSelectFunction: "BindFields", colorHeader: "red", hasButton: true, buttonId: "btnCreate", buttonType: "success", buttonLabel: LanguageHelper.Crear, buttonFunction: "", buttonToggle: "modal", buttonTarget: "createModal")

@Html.CtrlModalForm(viewName: "vAgregarFotografias", id: "createModal", modalFormId: "createModalForm", title: LanguageHelper.Crear, text: LanguageHelper.IngresarTextoCrear, inputColumnDataNames: "Titulo,URL,Upload", inputIds: "txtCreateTitulo,txtCreateURL,btnCreateDocument", inputTypes: "text,text,button", inputClasses: ",disabled,center-item w-50 btn-outline-success waves-effect mt-3 p-3 rounded mb-0 ", inputPlaceholders: ",,", inputLabels: LanguageHelper.Titulo + "," + LanguageHelper.URL + ",", inputValues: ",," + LanguageHelper.SubirFotografia, btnActionId: "btnInsert", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "CreatePhoto", btnCancelId: "btnInsertCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanInsert")

<div class="text-center pt-3">
    <button id="btnContinuar" class="btn btn-primary btn-lg">@LanguageHelper.Continuar</button>
</div>

@Html.CtrlModalMessage(viewName: "vAgregarFotografias", id: "deleteModalFirst", modalFormId: "deleteModalMessage", title: LanguageHelper.Eliminar, text: LanguageHelper.ConfirmacionEliminar, btnActionId: "btnDelete", btnActionType: "danger", btnActionText: LanguageHelper.Eliminar, btnActionFunction: "DeletePhoto", btnCancelId: "btnDeleteCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanDeleteAttribute", spanClasses: "font-weight-bold", spanColumnDataName: "Titulo")


