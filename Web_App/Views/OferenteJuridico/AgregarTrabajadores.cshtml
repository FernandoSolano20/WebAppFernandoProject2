@using Web_App.AppCode.Helper.Language
@using WebApp.Helpers

@{
    ViewBag.Title = "OferentesPendientes";
    Layout = "~/Views/Shared/_LayoutProveedorJuridico.cshtml";
}


<script src="~/Scripts/Views/OfrerenteJuridico/AgregarTrabajadores/AgregarTrabajadores.js"></script>
<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">@LanguageHelper.Trabajadores</h1>
        </div>
    </div>
</div>

@{
    string columnsTitle = LanguageHelper.Identificacion + "," + LanguageHelper.Nombre + "," + LanguageHelper.PrimerApellido + "," + LanguageHelper.AgregarTrabajadorOferta + "," + LanguageHelper.EliminarTrabajadoresOferta;
}

@Html.CtrlTable(viewName: "Agregar", id: "tblUsuario", title: LanguageHelper.Usuarios,
    columnsTitle: columnsTitle, ColumnsDataName: "Identificacion,Nombre,PrimerApellido", onSelectFunction: "BindFields", colorHeader: "red", hasButton: false, buttonId: "", buttonType: "", buttonLabel: "", buttonFunction: "", buttonToggle: "", buttonTarget: "")

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="card col-10 p-0  mt-3">

            <div class="card-body p-0 rounded-lg">

                <div id="main" class="container p-0">


                    <div id="listaTrabajadores" class="w-75" style="margin: 0 auto;">

                    </div>

                </div>
            </div>

            <div class="text-center pt-3">
                <a href="../OferenteJuridico/Solicitudes" class="btn btn-primary btn-lg">@LanguageHelper.Continuar</a>
            </div>
        </div>
    </div>
</div>

@Html.CtrlModalMessage(viewName: "Agregar", id: "agregarModal", modalFormId: "agregarModalMessage", title: LanguageHelper.AgregarTrabajadorOferta, text: "", btnActionId: "btnAgregar", btnActionType: "danger", btnActionText: LanguageHelper.Agrega, btnActionFunction: "Create", btnCancelId: "btnAgregarCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanStatusAttribute", spanClasses: "font-weight-bold")

@Html.CtrlModalMessage(viewName: "Agregar", id: "eliminarModal", modalFormId: "eliminarModalMessage", title: LanguageHelper.EliminarTrabajadoresOferta, text: "", btnActionId: "btnEliminar", btnActionType: "danger", btnActionText: LanguageHelper.Eliminar, btnActionFunction: "Delete", btnCancelId: "btnEliminarCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "Cancel", spanId: "spanStatusAttribute", spanClasses: "font-weight-bold")

