@using Web_App.AppCode.Helper.Language
@using WebApp.Helpers

@{
    ViewBag.Title = "Login";
}

<style>
    .container-login {
        margin: 60px auto;
    }
</style>

<div class="col-lg-6 col-md-12 mb-4 container-login">
    <!-- Material form login -->
    <div class="card">

        <h5 class="card-header elegant-color white-text text-center py-4">
            <strong>@LanguageHelper.IniciarSesion</strong>
        </h5>

        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">

            <!-- Form -->
            <form class="text-center" style="color: #757575;" action="#!">

                <!-- Email -->
                <div class="md-form">
                    <input type="email" id="email" class="form-control">
                    <label for="email">@LanguageHelper.CorreoElectronico</label>
                </div>

                <!-- Password -->
                <div class="md-form">
                    <input type="password" id="password" class="form-control">
                    <label for="password">@LanguageHelper.Contrasenna</label>
                </div>

                <div class="d-flex justify-content-around">
                    <div>
                        <!-- Forgot password -->
                        <a data-target="#forgot-pass" href="#" data-toggle="modal"> @LanguageHelper.OlvidoSuContrasennaPregunta</a>
                    </div>
                </div>

                <!-- Sign in button -->
                <button class="btn btn-outline-elegant btn-rounded btn-block my-4 waves-effect z-depth-0" type="button" id="login">@LanguageHelper.IniciarSesion</button>

            </form>
            <!-- Form -->

        </div>

    </div>
    <!-- Material form login -->
</div>

@Html.CtrlModalForm(viewName: "Login", id: "change-pass", modalFormId: "change-pass-form", title: LanguageHelper.CambiarContrasenna, text: "", inputColumnDataNames: "Password,RepetirContra", inputIds: "contrasenna,repetir-contrasenna", inputTypes: "password,password", inputClasses: ",", inputPlaceholders: ",", inputLabels: LanguageHelper.Contrasenna + "," + LanguageHelper.ConfirmarContrasenna, btnActionId: "btnSave", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "ChangePass", btnCancelId: "btnCancel", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanUpdate", inputValues: ",,")

@Html.CtrlModalForm(viewName: "Login", id: "forgot-pass", modalFormId: "forgot-pass-form", title: LanguageHelper.OlvidarContrasenna, text: "", inputColumnDataNames: "Email", inputIds: "email-forgot", inputTypes: "email", inputClasses: "", inputPlaceholders: "", inputLabels: LanguageHelper.CorreoElectronico, btnActionId: "btnSaveForgot", btnActionType: "success", btnActionText: LanguageHelper.Guardar, btnActionFunction: "ForgetPass", btnCancelId: "btnCancelForgot", btnCancelType: "light", btnCancelText: LanguageHelper.Cancelar, btnCancelFunction: "CleanUpdate", inputValues: "")


<script src="~/Scripts/Views/Login/Login.js"></script>