@using WebApp.Helpers;
@using Web_App.AppCode.Helper.Language;
<script src="~/Scripts/Views/TerminosServicio/vTerminosServicio.js"></script>
@{
    Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
}

<!--- Welcome Section -->
<div class="container-fluid padding">
    <div class="row welcome text-center">
        <div class="col-12">
            <h1 class=" brand-font pt-4">Términos de servicio</h1> <!--Hacer lo del lang.Help-->
        </div>

        <hr>

        <div class="col-12">
            <p class="lead">Mantenimiento de los Términos de servicio</p>
        </div>
    </div>
</div>

@{
    string columnsTitle = "Titulo" + "," + "Descripción" + "," + "Estado" + "," + "Idioma" + "," + "Acciones";
}

<!--- Control para la Tabla -->
@Html.CtrlTable(
    viewName: "vTerminosServicio",
    id: "tblTerminoServicio",
    title: "Terminos de servicio",
    columnsTitle: columnsTitle,
    ColumnsDataName: "Titulo,Descripcion,Estado,Idioma",
    onSelectFunction: "BindFields",
    colorHeader: "red",
    hasButton: true,
    buttonId: "btnCreate",
    buttonType: "success",
    buttonLabel: "Crear",
    buttonFunction: "",
    buttonToggle: "modal",
    buttonTarget: "createModal")

<!--- Control para el Modal (Editar) -->
@Html.CtrlModalForm(
    viewName: "vTerminosServicio",
    id: "editModal",
    modalFormId: "editModalForm",
    title: "Editar",
    text: "Ingresar datos a editar",
    inputColumnDataNames: "Titulo,Descripcion,Idioma",
    inputIds: "txtEditTitulo,txtEditDescripcion,txtEditIdioma",
    inputTypes: "text,text,text",
    inputClasses: "disabled,,",
    inputPlaceholders: "~,~,~",
    inputLabels: "Título" + "," + "Descripción" + "," + "Idioma",
    inputValues: ",,",
    btnActionId: "btnSave",
    btnActionType: "success",
    btnActionText: "Guardar",
    btnActionFunction: "Update",
    btnCancelId: "btnEditCancel",
    btnCancelType: "light",
    btnCancelText: "Cancelar",
    btnCancelFunction: "CleanUpdate")

<!--- Control para el Modal (Crear) -->
@Html.CtrlModalForm(
    viewName: "vTerminosServicio",
    id: "createModal",
    modalFormId: "createModalForm",
    title: "Crear",
    text: "Ingresar datos",
    inputColumnDataNames: "Titulo,Descripcion,Idioma",
    inputIds: "txtCreateTitulo,txtCreateDescripcion,txtCreateIdioma",
    inputTypes: "text,text,text",
    inputClasses: ",,",
    inputPlaceholders: ",,",
    inputLabels: "Título" + "," + "Descripción" + "," + "Idioma",
    inputValues: ",,",
    btnActionId: "btnInsert",
    btnActionType: "success",
    btnActionText: "Guardar",
    btnActionFunction: "Create",
    btnCancelId: "btnInsertCancel",
    btnCancelType: "light",
    btnCancelText: "Cancelar",
    btnCancelFunction: "CleanInsert")

<!--- Mensaje del Modal (Eliminar) -->
@Html.CtrlModalMessage(
    viewName: "vTerminosServicio", 
    id: "deleteModal", 
    modalFormId: "deleteModalMessage", 
    title: "Eliminar",
    text: "Confirmación: Eliminar", 
    btnActionId: "btnDelete", 
    btnActionType: "danger", 
    btnActionText: "Eliminar",
    btnActionFunction: "Delete", 
    btnCancelId: "btnDeleteCancel", 
    btnCancelType: "light", 
    btnCancelText: "Cancelar",
    btnCancelFunction: "Cancel", 
    spanId: "spanDeleteAttribute", 
    spanClasses: "font-weight-bold", 
    spanColumnDataName: "Titulo")

<!--- Mensaje del Modal (Activar/Desactivar) -->
@Html.CtrlModalMessage(
    viewName: "vTerminosServicio", 
    id: "statusModal", 
    modalFormId: "statusModalMessage",
    title: "Activar/Desactivar", 
    text: "Confirmacion de Estado", 
    btnActionId: "btnStatus", 
    btnActionType: "warning",
    btnActionText: "Activar/Desactivar", 
    btnActionFunction: "UpdateStatus", 
    btnCancelId: "btnStatusCancel", 
    btnCancelType: "light",
    btnCancelText: "Cancelar", 
    btnCancelFunction: "Cancel", 
    spanId: "spanStatusAttribute", 
    spanClasses: "font-weight-bold",
    spanColumnDataName: "Titulo")
